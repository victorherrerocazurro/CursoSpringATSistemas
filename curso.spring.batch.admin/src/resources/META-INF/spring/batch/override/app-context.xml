<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd">

	<context:annotation-config />
	<context:component-scan base-package="curso.springbatch"/>
	
	<context:property-placeholder location="classpath:batch-default.properties"/>
<!--	<jee:jndi-lookup id="dataSource" jndi-name="java:comp/env/jdbc/SpringBatchAdmin"/>-->

	<batch:job-repository id="jobRepository" />
	
	<task:executor id="jobLauncherTaskExecutor" pool-size="10" rejection-policy="ABORT"/>
	
 
</beans>
